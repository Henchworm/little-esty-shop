
<h1>Bulk Discounts Index for <%=@merchant.name %></h1>
<p><%= link_to "Create a New Bulk Discount", "/merchants/#{@merchant.id}/bulk_discounts/new", method: :get%></p>

<% @merchant.bulk_discounts.each do |discount| %>
  <ul><span>Discount id: <%= discount.id  %>,
    Percent Off: <%= discount.percent_off %>,
    Quantity Theshold: <%= discount.quantity_threshold %>
    <p><%= link_to "View Bulk Discount ##{discount.id}", "/merchants/#{@merchant.id}/bulk_discounts/#{discount.id}", method: :get%></p>
    <p><%= link_to "Delete Bulk Discount #{discount.id}", "/merchants/#{@merchant.id}/bulk_discounts/#{discount.id}", method: :delete%></p>
</span></ul>
<% end %>